app.controller('listadoCtrl', ['$scope', function($scope){

    $scope.listado = ["Juan Carlos","Grisel Garcia","Mai Hernandez","Joshua Yurem"];

    $scope.listadoProfesores = {
        profesores:[{
            nombre: "Juan Carlos",
            edad: 39,
            clase: "PEE"
        },{
            nombre:"Grisel Garcia",
            edad: 35,
            clase: "ICE"
        },{
            nombre:"Mai",
            edad:16,
            clase:"M110"
        }]

    }
}]);


})();

